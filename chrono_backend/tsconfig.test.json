{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest", "@types/supertest"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitReturns": false
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
